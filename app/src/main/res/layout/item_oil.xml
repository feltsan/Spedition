<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/layout">

    <TableLayout
        android:id="@+id/truckTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dateOil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:text="12.10.15"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="0.5px"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:singleLine="false" />



            <TextView
                android:id="@+id/kmOil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:text="Васарошнамень"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:singleLine="false"
                />

            <TextView
                android:id="@+id/oilBrend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:text="Москва"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:singleLine="false" />

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                >

                <CheckBox
                    android:layout_centerHorizontal="true"
                    android:id="@+id/oilFilterCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"/>
            </RelativeLayout>


            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                >

                <CheckBox
                    android:id="@+id/airFilterCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"/>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="5"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                >

                <CheckBox
                    android:id="@+id/fuelFilterCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"/>
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="6"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                >

                <CheckBox
                    android:id="@+id/glagodelCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/priceOil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="7"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:text="2700"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:singleLine="false"
                android:inputType="number" />
            <TextView
                android:id="@+id/serviceOil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="8"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:text="2700"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="3"
                android:background="@android:color/white"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:singleLine="false" />

        </TableRow>
    </TableLayout>


</RelativeLayout>